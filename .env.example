# X (Twitter) API Credentials
# Get these from https://developer.x.com/en/portal/dashboard

# Bearer Token (App-only) - for user lookup
X_API_BEARER_TOKEN=your_bearer_token_here

# OAuth credentials (User context) - for liked tweets access
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Your X username (without @)
X_USERNAME=your_username_here

# Configuration options
MAX_TWEETS=25
DAYS_BACK=7

# Anthropic API for blog topic generation (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here